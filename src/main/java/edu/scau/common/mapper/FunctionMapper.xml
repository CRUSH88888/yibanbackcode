<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.FunctionMapper">

    <select id="getActivity" resultMap="schedule">
        select id,title,address,start_time,end_time from activite
        order by start_time asc
    </select>
    <resultMap id="schedule" type="edu.scau.common.dto.Schedule">
        <result column="id" property="id"/>
        <result column="address" property="address"/>
        <result column="title" property="title"/>
        <result column="start_time" property="startTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <select id="getInformation" resultMap="information" parameterType="int">
        select * from information
        where user_id=#{userId}
    </select>
    <resultMap id="information" type="edu.scau.common.pojo.Information">
        <result column="id" property="id"/>
        <result column="information" property="information"/>
        <result column="user_id" property="userId"/>
        <result column="browsed" property="browsed"/>
        <result column="publish_time" property="publishTime"/>
    </resultMap>
    <select id="getInformationById" resultMap="information" parameterType="int">
        select * from information
        where id=#{id}
    </select>
    <update id="updateBrowsed" parameterType="int">
        update information
        set browsed=1
        where id=#{id}
    </update>
    <insert id="insertInformation" parameterType="edu.scau.common.pojo.Information" useGeneratedKeys="true" keyProperty="id">
        insert into information( browsed, user_id, information, publish_time)
        VALUES (0,#{userId},#{information},#{publishTime})
    </insert>
    <select id="getCollected" resultType="integer">
        select id from collection
        where activity_id=#{activityId}
        and user_id=#{userId}
    </select>
</mapper>