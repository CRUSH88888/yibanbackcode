<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.ActivityBrowsedMapper">
    <resultMap id="ActivityBrowsedMap" type="edu.scau.common.dto.IndexActivityStatus">
        <id property="id" column="id" ></id>
        <result column="is_browsed" property="browsed" javaType="Boolean"/>
        <association property="activity" javaType="edu.scau.common.pojo.Activity" column="id">
            <id column="id" property="id"/>
            <result column="address" property="address"/>
            <result column="title" property="title"/>
            <result column="text" property="text"/>
            <result column="user_id" property="userId"/>
            <result column="start_time" property="startTime"/>
            <result column="end_time" property="endTime"/>
            <result column="build_time" property="buildingTime"/>

        </association>
    </resultMap>

    <select id="selectActivityBrowsed" parameterType="integer" resultMap="ActivityBrowsedMap">
        SELECT a.*,b.* from activite as a
			left join browsed as b on (a.id = b.activity_id and b.user_id = #{userId})
			order by build_time desc
    </select>
    <select id="selectLabels" parameterType="integer" resultType="integer">
        select label_code from activity_label where activity_id = #{activityId}
    </select>
    <insert id="insertActivityBrowsed" parameterType="integer" >
        insert into browsed (is_browsed, activity_id, user_id)
        VALUES (1,#{activityId},#{userId})
    </insert>
    <select id="checkedActivityBrowsed" parameterType="integer" resultType="integer">
        select browsed.id from browsed where user_id = #{userId} and activity_id = #{activityId}
    </select>

    <update id="updateActivityBrowsed" >
        update browsed set
        user_id = #{userId},
        activity_Id = #{activityId},
        browsed_Time = #{buildingTime}
        where user_id = #{userId} and activity_Id = #{activityId}
    </update>

    <delete id="deleteActivityBrowsed" parameterType="integer">
        delete  from browsed where id = #{id}
    </delete>

</mapper>