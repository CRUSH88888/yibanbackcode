<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.AssociationMapper">

    <select id="getAssociationByName" resultMap="association" parameterType="String">
        select * from association where `name`=#{associationName}
    </select>
    <resultMap id="association" type="edu.scau.common.pojo.Association">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="introduce" property="introduce"/>
        <result column="href" property="href"/>
        <result column="type" property="type"/>
    </resultMap>
    <select id="getAssociationByType" resultType="String" parameterType="String">
        select `name` from association where type=#{type}
    </select>
    <update id="updateAssociation" parameterType="edu.scau.common.pojo.Association">
        update association
        set name=#{name},
            introduce=#{introduce},
            href=#{href},
            type=#{type}
            where id=#{id}
    </update>
    <insert id="insertAssociation" parameterType="edu.scau.common.pojo.Association" useGeneratedKeys="true" keyProperty="id">
        insert into association
        (name, introduce, href, type)
        VALUES (#{name},#{introduce},#{href},#{type})
    </insert>
    <select id="getAssociation" resultType="string">
        select `name` from association
    </select>
    <select id="getAssociationById" resultType="string" parameterType="int">
        select `name` from association
        where id=#{id}
    </select>
    <select id="getPicture" resultType="string" parameterType="string">
        select picture from association_pic
        where association_name=#{associationName}
    </select>
    <insert id="insertPic">
        insert into association_pic(association_name,picture)
        values (#{associationName},#{picture})
    </insert>
    <delete id="deletePicture" parameterType="string">
        delete from association_pic
        where association_name=#{associationName}
    </delete>
</mapper>