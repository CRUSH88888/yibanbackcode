<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.ActivityCollectedMapper">
    <select id="getCollectedActivity" resultMap="activityManger" parameterType="int">
        select a.id,a.title,a.build_time
         from collection c
         left join activite a on c.activity_id = a.id
        where c.user_id = #{userId}
    </select>
    <resultMap id="activityManger" type="edu.scau.common.dto.ActivityManger">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="build_time" property="buildTime"/>
        <result column="address" property="address"/>
    </resultMap>
    <insert id="addActivity">
        insert into collection(user_id, activity_id) value (#{userId},#{activityId})
    </insert>
    <delete id="deleteCollectedActivity" >
        delete from collection
        where 1=1
        <if test="userId!=null">
            and  user_id=#{userId}
        </if>
        and activity_id=#{activityId}
    </delete>


</mapper>