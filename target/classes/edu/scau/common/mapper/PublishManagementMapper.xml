<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.PublishManagementMapper">
    <select id="getPublishActivity" resultMap="activity" parameterType="int">
        select id,user_id,title,build_time from activite
        where user_id=#{userId}
        order by build_time desc
    </select>
    <resultMap id="activity" type="edu.scau.common.dto.PublishManagement">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="text" column="title"/>
        <result property="publishTime" column="build_time"/>
    </resultMap>
    <select id="getPublishGroup" resultMap="group" parameterType="int">
        select id,user_id,text,publish_time from `group`
        where user_id=#{userId}
        order by publish_time desc
    </select>
    <resultMap id="group" type="edu.scau.common.dto.PublishManagement">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="text" column="text"/>
        <result property="publishTime" column="publish_time"/>
    </resultMap>
    <delete id="deletePublishActivity" parameterType="int">
        delete from activite where id=#{id}
    </delete>
    <delete id="deletePublishGroup" parameterType="int">
        delete from `group` where id=#{id}
    </delete>
    <select id="getAllActivity" resultMap="activity">
        select id,user_id,title,build_time from activite
        order by build_time desc
    </select>
    <select id="getAllGroup" resultMap="group">
        select id,user_id,text,publish_time from `group`
        order by publish_time desc
    </select>
</mapper>