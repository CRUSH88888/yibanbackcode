<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.BrowsedMapper">
    <select id="getFootPrint" resultMap="footPrint" parameterType="int">
        select a.id,a.title,b.browsed_time from browsed as b
        left join activite as a on a.id=b.activity_id
        where b.user_id=#{userId}
        order by browsed_time desc
    </select>
    <resultMap id="footPrint" type="edu.scau.common.dto.FootPrint">
        <result column="id" property="activityId"/>
        <result column="title" property="title"/>
        <result column="browsed_time" property="browsedTime"/>
    </resultMap>
    <insert id="insertBrowsed" parameterType="edu.scau.common.pojo.Browse" useGeneratedKeys="true" keyProperty="id">
        insert into browsed(is_browsed,activity_id,user_id,browsed_time)
        values (1,#{activityId},#{userId},#{browsedTime})
    </insert>
    <delete id="deleteBrowsed" parameterType="int">
        delete from browsed
        where activity_id=#{activityId}
    </delete>
</mapper>