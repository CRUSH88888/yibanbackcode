<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.AuthenticationMapper">
    <select id="getAuthentication" parameterType="int" resultType="edu.scau.common.pojo.Authentication">
        select * from authentication
        where user_id=#{userId}
    </select>
    <select id="AssociationAuthentication" resultType="string">
        select association_name from authentication
        where user_id=#{userId} and `level` = 2
    </select>
    <select id="getAssociationId" parameterType="string" resultType="integer">
        select id from association
        where name=#{associationName}
    </select>
    <select id="getId" parameterType="int" resultType="integer">
        select id from authentication
        where user_id=#{userId}
    </select>
</mapper>