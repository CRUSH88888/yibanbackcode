<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.SearchMapper">
    <select id="searchAssociation" resultType="String">
        select `name` from association
        where `name` like concat
        <foreach collection="search" item="name" open="(" close=")" separator=",">
            trim('%${name}%')
        </foreach>
    </select>
    <resultMap id="activitySearch" type="edu.scau.common.dto.ActivitySearch">
        <result column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="build_time" property="buildTime"/>
        <result column="text" property="searchBefore"/>
    </resultMap>
    <select id="searchActivityByTitle" resultMap="activitySearch" >
        select  id,title,build_time from activite
        where title like concat
        <foreach collection="search" item="name" open="(" close=")" separator=",">
            trim('%${name}%')
        </foreach>
        order by build_time desc
    </select>
    <select id="searchActivityByLabel" parameterType="int" resultMap="activitySearch">
        select a.id,a.title,a.build_time from activity_label as l
        left join activite as a on l.activity_id=a.id
        where l.label_code=#{label}
        order by build_time desc
    </select>
</mapper>