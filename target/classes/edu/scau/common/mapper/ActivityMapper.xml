<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="edu.scau.common.mapper.ActivityMapper">
    <resultMap id="ActivityMap" type="edu.scau.common.pojo.Activity">
        <id property="id" column="id"/>
        <result property="title" column="title"/>
        <result column="text" property="text"/>
        <result property="address" column="address"/>

        <result property="buildingTime" column="build_time"/>
        <result property="endTime" column="end_time"/>
        <result property="startTime" column="start_time"/>
        <result property="userId" column="user_id"/>
    </resultMap>
    <resultMap id="message" type="edu.scau.common.pojo.Message">
        <id column="id" property="id"/>
        <result column="activity_id" property="activityId"/>
        <result column="browsed" property="browsed"/>
        <result column="user_id" property="userId"/>
        <result column="message" property="message"/>
    </resultMap>

    <resultMap id="ActivityAndMessage" type="edu.scau.common.dto.ActivityAndMessage">
        <association property="activity" resultMap="ActivityMap"></association>
        <collection property="message" resultMap="message" javaType="arraylist" ofType="edu.scau.common.pojo.Message">

        </collection>
<!--        <association property="message" javaType="edu.scau.common.pojo.Message" resultMap="message">-->
<!--        </association>-->
    </resultMap>


    <insert id="insertActivity" parameterType="edu.scau.common.pojo.Activity" useGeneratedKeys="true" keyProperty="id">
        insert into activite(address,title,text,user_id,start_time,end_time)
        VALUES (#{address},#{title},#{text},#{userId},#{startTime},#{endTime})
    </insert>
    <insert id="insertLabelOfActivity" >
        INSERT INTO activity_label (label_code,activity_id)
        VALUES
        (#{label},#{activityId})
    </insert>
    <select id="selectActivityById" parameterType="integer" resultMap="ActivityMap">

    select * from activite where id = #{activityId}
    </select>
    <select id="selectMessage" resultMap="message" parameterType="integer">
        select message from activity_message where user_id = -1 and activity_id = #{activityId}
    </select>

    <select id="selectPicture" parameterType="integer" resultType="edu.scau.common.pojo.ActivityPicture">
        select id as id,
        pic_url as picUrl from activity_pic where activity_id = #{activityId}
    </select>
    <insert id="insertActivityPicture" parameterType="edu.scau.common.pojo.ActivityPicture">
        insert into activity_pic (activity_id, pic_url) VALUES (#{activityId},#{picUrl})
    </insert>
    <select id="checkCollectedByActivityIdAndUserId" parameterType="integer" resultType="integer">
        select id from collection where activity_id = #{activityId} and user_id = #{userId}
    </select>


</mapper>